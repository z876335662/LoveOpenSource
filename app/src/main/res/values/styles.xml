<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- customize the color palette -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@color/dim_foreground_material_dark</item>
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_green_A200</item>

    </style>

    <style name="ToolbarTheme" parent="AppBaseTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <style name="AppBaseTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">@android:color/black</item>
        <!--<item name="android:windowBackground">@color/window_background</item>-->
        <!--<item name="searchViewStyle">@style/SearchViewStyle</item>-->
        <!--<item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>-->
        <item name="popupTheme">@style/popupTheme</item>
        <!--<item name="popupMenuStyle">@style/popupMenuStyle</item>-->
        <!--<item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>-->
        <!--<item name="selectableItemBackground">@drawable/selectable_background</item>-->
    </style>

    <style name="popupTheme" parent="AppBaseTheme.Light">

        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MainTheme" parent="AppBaseTheme.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>

    </style>

</resources>
